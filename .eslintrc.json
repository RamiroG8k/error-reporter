{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react-refresh"
  ],
  "rules": {
    "react-refresh/only-export-components": "warn",
    "comma-dangle": ["error", "never"],
		"eol-last": [2, "always"],
		"semi": [2, "always"],
		"quotes": [2, "single", {
			"avoidEscape": true
		}],
		"arrow-body-style": ["error", "as-needed"]
  }
}
